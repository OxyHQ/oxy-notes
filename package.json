{
  "name": "oxy-notes",
  "version": "1.0.0",
  "description": "Oxy Notes - A beautiful note-taking app with React Native frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "cd packages/frontend && npm run start --tunnel --reset-cache",
    "backend": "cd packages/backend && npm run dev",
    "build:frontend": "cd packages/frontend && npm run build-web",
    "build:backend": "cd packages/backend && npm run build",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "lint:backend": "cd packages/backend && npm run lint",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd packages/frontend && npm install",
    "install:backend": "cd packages/backend && npm install",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces --if-present",
    "build": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "",
  "license": "ISC"
}
